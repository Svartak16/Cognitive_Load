{
  "manifest_version": 3,
  "name": "Gandhar dada",
  "version": "2.0",
  "description": "ML-powered cognitive load detection with AI assistance.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "notifications",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon48.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon48.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "ml/trackers.js",
        "ml/feature-extractor.js",
        "ml/ml-detector.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["lib/tf.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}